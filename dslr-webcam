# https://www.crackedthecode.co/how-to-use-your-dslr-as-a-webcam-in-linux/
# sudo modprobe v4l2loopback exclusive_caps=1 max_buffers=2

gphoto2 --stdout --capture-movie --set-config-value whitebalance="Daylight" ==set=config-value aperture="3.5"| ffmpeg \
-hwaccel nvdec \
-c:v mjpeg_cuvid \
-i - \
-vcodec rawvideo \
-pix_fmt yuv420p \
-threads 0 \
-f v4l2 /dev/video0
gphoto2 --set-config-value whitebalance=Daylight --set-config-value aperture=3.5 --stdout --capture-movie | ffmpeg -hwaccel nvdec -c:v mjpeg_cuvid -i - -vcodec rawvideo -pix_fmt yuv420p -threads 0 -f v4l2 /dev/video0
